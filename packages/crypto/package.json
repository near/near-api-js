{
  "name": "@near-js/crypto",
  "version": "1.4.1",
  "description": "Abstractions around NEAR-compatible elliptical curves and cryptographic keys",
  "main": "lib/esm/index.js",
  "type": "module",
  "scripts": {
    "build": "pnpm compile:esm && pnpm compile:cjs",
    "compile:esm": "tsc -p tsconfig.json",
    "compile:cjs": "tsc -p tsconfig.cjs.json && cjsify ./lib/commonjs",
    "lint": "eslint -c ../../.eslintrc.ts.yml src/**/*.ts test/**/*.ts --no-eslintrc",
    "lint:fix": "eslint -c ../../.eslintrc.ts.yml src/**/*.ts test/**/*.ts --no-eslintrc --fix",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@near-js/types": "workspace:*",
    "@near-js/utils": "workspace:*",
    "@noble/curves": "1.2.0",
    "borsh": "1.0.0",
    "randombytes": "2.1.0",
    "secp256k1": "5.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@noble/hashes": "^1.4.0",
    "@types/node": "20.0.0",
    "build": "workspace:*",
    "jest": "29.7.0",
    "ts-jest": "29.1.5",
    "tsconfig": "workspace:*",
    "typescript": "5.4.5"
  },
  "files": [
    "lib"
  ],
  "exports": {
    "require": "./lib/commonjs/index.cjs",
    "import": "./lib/esm/index.js"
  }
}
