    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.7.1",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "commitlint": "19.7.1",
    "eslint": "8.20.0",
    "husky": "9.1.7",
    "typedoc": "0.27.9",
    "typescript": "5.4.5"
  },
  "resolutions": {
    "near-sandbox": "0.0.18",
    "near-api-js": "workspace:*"
  }
