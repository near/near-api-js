    "lint:fix": "bun run --filter '*' lint:fix",
    "test": "bun test",
    "release": "changeset publish",
    "prepare": "husky install",
    "docs:generate": "typedoc"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.1",
    "@changesets/changelog-github": "0.5.1",
