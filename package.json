{
  "name": "@near-js/monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.18.3"
  },
  "scripts": {
    "build": "bun run --filter '*' build",
    "check-exports": "bun run --filter '*' check-exports",
    "clean": "bun run --filter '*' clean",
