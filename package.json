{
    "name": "@near-js/monorepo",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*",
        "e2e"
    ],
    "engines": {
        "node": ">=20.18.3"
    },
    "scripts": {
        "build": "tsc -b tsconfig.build.json",
        "check-exports": "bun run --filter '*' check-exports",
        "clean": "bun run --filter '*' clean && rm -f *.tsbuildinfo",
        "lint": "bunx --bun biome check",
        "lint:fix": "bunx --bun biome check --write",
        "test": "bun test packages/",
        "test:e2e": "bun test e2e/",
        "typecheck": "bun run --filter '*' typecheck",
        "release": "changeset publish",
        "prepare": "husky",
        "docs:generate": "typedoc"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.18.2",
        "@biomejs/biome": "2.3.4",
        "@changesets/changelog-github": "0.5.1",
        "@changesets/cli": "^2.29.7",
        "@commitlint/cli": "19.3.0",
        "@commitlint/config-conventional": "19.7.1",
        "@types/bun": "^1.3.2",
        "commitlint": "19.7.1",
        "husky": "9.1.7",
        "typedoc": "0.27.9",
        "typescript": "5.9.3"
    },
    "resolutions": {
        "near-api-js": "workspace:*"
    },
    "overrides": {
        "chalk": "^5.3.0"
    },
    "packageManager": "bun@1.3.0"
}